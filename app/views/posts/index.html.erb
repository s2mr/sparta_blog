<div class="col-md-8">
  <p id="notice"><%= notice %></p>
  
  <% @posts.each do |post| %>
    
    <h2>タイトル：<%= post.title %></h2>
    <p>カテゴリ：<%= post.category %></p>
    <p>作成日：<%= post.created_at %></p>
    <p><%= post.body %></p>
    <%= link_to '続きを読む', post, class: 'btn btn-primary'%>
    
  <% end %>

  <br>
  
  <%= link_to 'New Post', new_post_path %>
</div>
